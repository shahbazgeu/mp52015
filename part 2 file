<?php
$sex=$_POST['sex'];
switch ($sex)
{
	case 'm2':
		male2();
		break;
	case 'f2':
		female2();
		break;
	case 'b2':
		both2();
		break;
	default:
		print "UNABLE TO FIND CHOICE";
		exit;
}
?>
<?php
function male2()
{
	$yy=$_POST['yy'];
 	$nm=$_POST['nm'];
	$max=2013;
	$f=0;
	echo '<span style="color:#AFA;font-family:Rockwell Extra Bold;">YOUR GIVEN YEAR = </span>'.$yy."<br>";
	echo '<span style="color:#AFA;font-family:Rockwell Extra Bold;">NAME TO BE SEARCH = </span>'.$nm."<br>";
	echo '<span style="color:#AFA;font-family:Rockwell Extra Bold;">CHANGES OCCURS IN THE POSITION OF </span>'.$nm.'<span style="color:#AFA;font-family:Rockwell Extra Bold;"> FROM THE YEAR </span>'.$yy.'<span style="color:#AFA;font-family:Rockwell Extra Bold;">  TO 2013 IN MALE BABIES</span>'."<br>";
	$d='/xampp/htdocs/mini';
	while($yy<=$max)
	{
		$dir=opendir($d);
		while(($file=readdir($dir))!== false)
		{
			$st="male_cy$yy"."_top.csv";
			if($file==$st)
			{ 
				$f=fopen("$file","r");
				while(($line=fgetcsv($f))!==FALSE)
				{
					if($line[0]==$nm)
					{
						echo "$yy -> $line[2]"."<br>";
						$f=1;
						break;
					}
				}
			}
		}
		closedir($dir);
		$yy=$yy+1;	
    	}
	if($f==0)
	{
		echo "<br>"."SORRY ITS NOT A MALE NAME"."<br>";
		exit;
	}	
}
function female2()
{
	$yy=$_POST['yy'];
 	$nm=$_POST['nm'];
	$max=2013;
	$f=0;
	echo '<span style="color:#AFA;font-family:Rockwell Extra Bold;">YOUR GIVEN YEAR = </span>'.$yy."<br>";
	echo '<span style="color:#AFA;font-family:Rockwell Extra Bold;">NAME TO BE SEARCH = </span>'.$nm."<br>";
	echo '<span style="color:#AFA;font-family:Rockwell Extra Bold;">CHANGES OCCURS IN THE POSITION OF </span>'.$nm.'<span style="color:#AFA;font-family:Rockwell Extra Bold;"> FROM THE YEAR </span>'.$yy.'<span style="color:#AFA;font-family:Rockwell Extra Bold;">  TO 2013 IN FEMALE BABIES</span>'."<br>";
	$d='/xampp/htdocs/mini';
	while($yy<=$max)
	{
		$dir=opendir($d);
		while(($file=readdir($dir))!== false)
		{
			$st="female_cy$yy"."_top.csv";
			if($file==$st)
			{ 
				$f=fopen("$file","r");
				while(($line=fgetcsv($f))!=FALSE)
				{
					if($line[0]==$nm)
					{
						echo "$yy -> $line[2]"."<br>";
						$f=1;
						break;
					}
				}
				fclose($f);
			}
		}
		closedir($dir);
		$yy=$yy+1;	
    	}
	if($f==0)
	{
		echo "<br>"."SORRY ITS NOT A FEMALE NAME"."<br>";
		exit;
	}
}
function both2()
{
	$yy=$_POST['yy'];
 	$nm=$_POST['nm'];
	$max=2013;
	$f1=0;
	$f2=0;
	echo '<span style="color:#AFA;font-family:Rockwell Extra Bold;">YOUR GIVEN YEAR = </span>'.$yy."<br>";
	echo '<span style="color:#AFA;font-family:Rockwell Extra Bold;">NAME TO BE SEARCH = </span>'.$nm."<br>";
	echo '<span style="color:#AFA;font-family:Rockwell Extra Bold;">CHANGES OCCURS IN THE POSITION OF </span>'.$nm.'<span style="color:#AFA;font-family:Rockwell Extra Bold;"> FROM THE YEAR </span>'.$yy.'<span style="color:#AFA;font-family:Rockwell Extra Bold;">  TO 2013 IN BABIES</span>'."<br>";
	$d='/xampp/htdocs/mini';
	while($yy<=$max)
	{
		$dir=opendir($d);
		while(($file=readdir($dir))!== false)
		{
			$st1="male_cy$yy"."_top.csv";
			$st2="female_cy$yy"."_top.csv";
			if($file==$st1)
			{ 
				
				$f=fopen("$file","r");
				while(($line=fgetcsv($f))!=FALSE)
				{
					if($line[0]==$nm)
					{
						echo "$yy -> $line[2]"."<br>";
						$f=1;
						break;
					}
				}
				fclose($f);
				
			}
			if($file==$st2)
			{ 
				echo "<html><body><table>\n\n";
				$f=fopen("$file","r");
				while(($line=fgetcsv($f))!=FALSE)
				{
					if($line[0]==$nm)
					{
						print "$yy    -    $line[2]";
						$f2=1;
						break;
					}
				}
				fclose($f);
				echo"\n</table></body></html>";
			}
		}
		closedir($dir);
		$yy=$yy+1;	
    	}
	if($f1==0)
	{
		echo "<br>"."IT IS NOT A MALE BABY NAME"."<br>";
	}
	if($f2==0)
	{
		echo "<br>"."IT IS NOT A FEMALE BABY NAME"."<br>";
	}
}
?>
</body>
</html>
